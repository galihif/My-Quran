<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyQuran" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/purple_700</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="textTitle" parent="TextAppearance.AppCompat">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/purple_500</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
    </style>

    <style name="textDesc" parent="TextAppearance.AppCompat">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/text_gray</item>
        <item name="android:fontFamily">@font/poppins</item>
    </style>



</resources>