<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="24dp"
    android:gravity="center"
    android:background="@drawable/bg_surah_detail"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_surah_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Al-Fatihah"
        android:textSize="24sp"
        android:fontFamily="@font/poppins_medium"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/tv_surah_arti"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        tools:text="The Opening"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:fontFamily="@font/poppins_medium"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="8dp"
        android:importantForAccessibility="no"
        android:src="@drawable/ic_surah_detail_divider"/>

    <TextView
        android:id="@+id/tv_surah_type_ayat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="MEXICAN - 7 AYAT"
        android:textAllCaps="true"
        android:textSize="14sp"
        android:textColor="@color/white"
        android:fontFamily="@font/poppins_medium"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:src="@drawable/ic_basmalah"
        android:importantForAccessibility="no"/>

    <ImageView
        android:id="@+id/btn_audio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:contentDescription="@string/play_audio"
        android:src="@drawable/ic_play"/>


</LinearLayout>