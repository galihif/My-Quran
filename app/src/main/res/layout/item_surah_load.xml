<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingVertical="8dp"
    android:orientation="horizontal"
    android:baselineAligned="false">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@drawable/ic_bg_surah_number">

        <TextView
            android:id="@+id/tv_surah_number"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:textColor="@color/text_purple"
            android:textSize="14sp"
            android:fontFamily="@font/poppins_medium"
            android:textAlignment="center"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_weight="1"
        android:layout_gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_surah_name"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_bg_skeleton_box"
            android:textColor="@color/text_purple"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/poppins_medium"/>

        <TextView
            android:id="@+id/tv_surah_type_ayat"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_bg_skeleton_box"
            android:textSize="12sp"
            android:textAllCaps="true"
            android:fontFamily="@font/poppins_medium"
            android:textColor="@color/text_gray"/>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_surah_arab"
        android:layout_width="60dp"
        android:layout_height="20sp"
        android:layout_gravity="center_vertical"
        android:background="@drawable/ic_bg_skeleton_box"
        android:fontFamily="@font/amiri_bold"
        android:textDirection="rtl"
        android:textSize="20sp"
        android:textColor="@color/purple_500"/>
</LinearLayout>